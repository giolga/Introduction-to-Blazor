@page "/weather"
@inject HttpClient Http

<PageTitle>Weather</PageTitle>

<h1>Weather</h1>

<p>This component demonstrates fetching data from the server.</p>

<h4>Enter city</h4>
<input type="text" @bind="@City" />
<button @onclick="GetWeatherForecast">Search</button>

@if (forecasts == null)
{
    <p><em>Loading...</em></p>
}
else
{
    var today = DateTime.Today;
    <h4>@City Today:  @today.ToShortDateString()</h4>
    <p>Wind: @forecasts.Forecast[0].Wind</p>
    <p>Temp: (C): @forecasts.Forecast[0].Temperature</p>
    <p>Summary: (C): @forecasts.Description</p>
    <table class="table">
        <thead>
            <tr>
                <th>Date</th>
                <th>Temp. (C)</th>
                <th>Wind</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var forecast in forecasts.Forecast)
            {
                <tr>
                    <td>@today.AddDays(int.Parse(forecast.Day)).ToShortDateString()</td>
                    <td>@forecast.Temperature</td>
                    <td>@forecast.Wind</td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    private WeatherForecast? forecasts;

    private string City = "Tbilisi";

    protected override async Task OnInitializedAsync()
    {
        forecasts = await Http.GetFromJsonAsync<WeatherForecast>(City);
    }

    private async Task GetWeatherForecast()
    {
        forecasts = await Http.GetFromJsonAsync<WeatherForecast>(City);
    }

    public partial class WeatherForecast
    {
        public string? Description { get; set; }
        public Forecast[]? Forecast { get; set; }
    }

    public class Forecast
    {
        public string? Temperature { get; set; }

        public string? Day{ get; set; }

        public string? Wind { get; set; }

    }
}
